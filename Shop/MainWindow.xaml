<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="15">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="356*"/>
        </Grid.RowDefinitions>
        <Rectangle  Fill="#FFFFCFC2"></Rectangle>
        <StackPanel  Orientation="Horizontal">
            <Image Source="/Images/logo.jpg" OpacityMask="#FFFFCFC2"></Image>
            <TextBlock Text="ShopOlivia" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Margin="200 0 "></TextBlock>
            <Button Width="55"  Content="Назад" Margin="10" Height="30" Name="BackBtn" Click="BackBtn_Click"></Button>
            <Button  Width="55" Content="Вперед" Margin="10"  Height="30"  Name="ForwardBtn" Click="ForwardBtn_Click"></Button>
        </StackPanel>
        <StackPanel Margin="10"  HorizontalAlignment ="Center" VerticalAlignment="Center" Grid.Row="1">
                <Frame x:Name="MyFrame" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
      

    </Grid>
</Window>
