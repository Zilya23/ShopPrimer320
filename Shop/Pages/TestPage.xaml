<Page x:Class="Shop.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">

            <ListView  Margin="5" x:Name="List1" Height="100" Width="100" SelectionChanged="List1_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Height="30"  Content="{Binding Name}" Background="{Binding Color}"></Label>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ListView ItemsSource="{Binding ProductCountry}"  Margin="5" x:Name="List2" Height="100" Width="100" SelectionChanged="List2_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Height="30"  Content="{Binding Country.Name}" Background="{Binding Country.Color}"></Label>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackPanel>
        
    </Grid>
</Page>
